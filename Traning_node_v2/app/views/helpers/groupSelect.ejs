<% 
groupSelectHelper = (name, groups, option='') => {
    let xhtml = ''
    groups.forEach((group)=>{
        let select = (option == group.id) ? 'selected="selected"' : ''
        xhtml += ` <option value="${group.id}" ${select} >${group.name}</option>`
    })
    
    return ` <select name="${name}" class="form-control" >${xhtml}</select>` 
}%>