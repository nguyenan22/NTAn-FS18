<% include ./../helpers/showCategory %>
<%
    let data=items.slice(1,3)
    const folderUpload='uploads/articles/'
%>
<section class="top-post-area pt-10">
    <div class="container no-padding">
        <div class="row small-gutters">
            <div class="col-lg-8 top-post-left mt-10">
                <div class="feature-image-thumb relative">
                    <div class="overlay overlay-bg"></div>
                    <img class="img-fluid" style="height:430px;"  src="<%= folderUpload + items[0].thumb  %>" alt="<%= items[0].title %>">
                </div>
                <div class="top-post-details">
                    <ul class="tags">
                        <li>
                            <a href="/category/<%- showCategoryName(category,items[0].categoryId).slug%>"><%- showCategoryName(category,items[0].categoryId).name  %></a>
                        </li>
                    </ul>
                    <a href="/post/<%= items[0].slug %>">
                        <h3><%= items[0].title %></h3>
                    </a>
                    <ul class="meta">
                        <li>
                            <a href="#">
                                <span class="lnr lnr-user"></span><%= items[0].created.user_name %></a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="lnr lnr-calendar-full"></span><%= moment(items[0].createdAt).format(systemConfig.formatTime) %></a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="lnr lnr-bubble"></span>06 Comments</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 top-post-right">
                <% data.forEach((data,index) =>{ %>
                    <div class="single-top-post mt-10">
                        <div class="feature-image-thumb relative">
                            <div class="overlay overlay-bg"></div>
                            <img class="img-fluid" src="<%= folderUpload + data.thumb  %>" alt="">
                        </div>
                        <div class="top-post-details">
                            <ul class="tags">
                                <li>
                                    <a href="/category/<%- showCategoryName(category,data.categoryId).slug%>"><%- showCategoryName(category,data.categoryId).name  %></a>
                                </li>
                            </ul>
                            <a href="/post/<%= data.slug %>">
                                <h4><%= data.title  %></h4>
                            </a>
                            <ul class="meta">
                                <li>
                                    <a href="#">
                                        <span class="lnr lnr-user"></span><%= data.created.user_name %></a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="lnr lnr-calendar-full"></span><%= moment(data.createdAt).format(systemConfig.formatTime) %></a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="lnr lnr-bubble"></span>06 Comments</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</section>