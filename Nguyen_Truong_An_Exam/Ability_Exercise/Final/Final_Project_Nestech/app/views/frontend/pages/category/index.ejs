<% const folderUpload='uploads/articles/' %>
<% include ./../../helpers/showCategory %>
<% include ./../../helpers/formatString %>
<div class="col-lg-8 post-list">
    <!-- Start latest-post Area -->
    <div class="latest-post-wrap" >
        <h4 class="cat-title"><%= dataCategory[0].name %></h4>
        <div id="load-more">
        <% dataArticle.forEach(data => { %>
            <div class="single-latest-post row align-items-center">
            <div class="col-lg-5 post-left">
                <div class="feature-img relative">
                    <div class="overlay overlay-bg"></div>
                    <img class="img-fluid" src="<%= folderUpload + data.thumb %>" alt="">
                </div>
                <ul class="tags">
                    <li>
                        <a href="/category/<%- showCategoryName(category,data.categoryId).slug%>" id="category-name"><%- showCategoryName(dataCategory,data.categoryId).name  %></a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-7 post-right">
                <a href="<%= systemConfig.prefixFrontend +"/post/"+ data.slug %>"">
                    <h4><%= data.title  %></h4>
                </a>
                <ul class="meta">
                    <li>
                        <a href="#">
                            <span class="lnr lnr-user"></span><%= data.created.user_name  %></a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="lnr lnr-calendar-full"></span><%= moment(data.createdAt).format(systemConfig.formatTime) %></a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="lnr lnr-bubble"></span>06 Comments</a>
                    </li>
                </ul>
                <p class="excert">
                    <%- formatStringHelper(data.editorData,100) %>
                </p>
            </div>
        </div>
        <% }) %>
    </div>

        <div class="load-more">
            <a href="javascript:" class="primary-btn" <%= hidden %>>Load More Posts</a>
        </div>

    </div>
    <!-- End latest-post Area -->
</div>