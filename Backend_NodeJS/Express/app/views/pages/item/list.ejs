              Search & Filter
              <a href="<%= linkPrefix %>">
              <span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
              </a>
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="status-list col-sm-6 pl0">
                    <!-- <% filterStatusHelper(statusFillters) %> -->
                    <%- filterStatusHelper(statusFillters,collection) %>
