<%
    const collection = 'items'
%>
<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Form 
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                    <% if (showError.length>=1) {%>
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                  <% showError.forEach(element=>{%>
                                         <li><%= element.path.charAt(0).toUpperCase() + element.path.slice(1)%>: <%= element.msg%></li>
                                  <% }) %>
                                <!-- <li>Name: không được rỗng</li>
                                <li>Status: chọn một trạng thái</li> -->
                            </ul>
                        </div>
                      <% } %>
                  </div>
              </div>
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" action="<%= systemConfig.prefixAdmin %>/items/form/<%= id %>/save" method="POST">
                          <div class="form-group">
                              <label>Name</label>
                              <input class="form-control" name="name" value="<%= data.name %>" >
                          </div>
                          <div class="form-group">
                              <label>Ordering</label>
                              <input class="form-control" type="number" name="ordering" value="<%= data.ordering %>" >
                          </div>
                          <div class="form-group">
                              <label>Status</label>
                              <select name="status" class="form-control" >
                                    <% if (data.status ==="active") { %>
                                        <option value="novalue">Choose Status</option>
                                        <option value="<%= data.status %>" selected="'selected" >Active</option>
                                        <option value="inactive"  >Inactive</option>
                                    <%} else {%>
                                        <option value="novalue">Choose Status</option>
                                        <option value="active"  >Active</option>
                                        <option value="<%= data.status %>" selected="'selected" >Inactive</option>
                                    <% } %>
                              </select>
                          </div>
                          <!-- <div class="form-group">
                              <label>Content</label>
                              <textarea class="form-control" name="content" rows="2"  id="content_ck" ></textarea>
                              </div> -->
                          <input class="form-control" name="id" value="" type="hidden" >
                          <button type="submit" class="btn btn-primary">Save</button>
                          <a type="button" href="<%=systemConfig.prefixAdmin %>/<%= collection%>" class="btn btn-default">Cancel</a>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div> 